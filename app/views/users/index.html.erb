<div class="row">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						<div class="row">
							<h3 class="panel-title text-center">Users</h3>
							<div class="col col-xs-12 text-right" data-turbolinks="false">
        				<%= link_to "Create New", new_user_path, class: "btn btn-sm btn-primary" %>
        			</div>
						</div>
					</div>
					<div class="panel-body">
					</div>
					<div class="panel-footer">
						<div class="row">	
							<div class="col-md-12">
								<table class="table table-bordered table-striped" id="user_datatable">
									<thead>
										<tr class="text-center">
											<th>Action</th><th>User Name</th>
										</tr>
									</thead>
									<tbody>									
										<% @users.each do |user| %>
											<tr class="text-center">		
												<td align="center">
		            					<%= link_to edit_user_path(user), title: 'Edit', class: "btn btn-default" do %>
		            						<i class="glyphicon glyphicon-pencil"></i>
		            					<% end %>
		            					<%= link_to user_path(user), method: :delete, data: {confirm: 'Are you sure?'}, title: 'Delete', class: "btn btn-danger" do %>
		            						<i class="glyphicon glyphicon-trash"></i>
		            					<% end %>
		            				</td>
												<td><%= user.user_name %></td>
											</tr>
										<% end %>
									</tbody>
								</table>
							</div>	
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>