<% if @user.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@user.errors.count, "error") %> found with your input:</h2>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>	
		</ul>
	</div>
<% end %>
<%= form_for(@user) do |f| %>
	<div class="container">    
		<div class="col-md-6 col-md-offset-3">
		  <div class="panel panel-default">
		    <div class="panel-heading">
		      <div class="row">
		       	<h3 class="panel-title">&nbsp;Add New User</h3>
		      </div>
		    </div>
		    <div class="panel-body">
		      <table class="table table-striped table-bordered table-list">
		        <thead>
		          <tr>
		            <th>User Name</th>
		          </tr> 
		        </thead>
		        <tbody>
		        	<tr class="form-group">
		        		<td><%= f.text_field :user_name, class: "form-control", placeholder: "Joe Bloggs" %></td>
		        	</tr>
		        </tbody>
		      </table>
		    </div>
		    <div class="panel-footer">
		      <div class="row">
		      	<div class="col-md-7" data-turbolinks="false">
		      		<%= f.submit "Create", class: "btn btn-sm btn-primary pull-right" %>
		      	</div>
		    	</div>
		  	</div>
			</div>
		</div>
	</div>
<% end %>